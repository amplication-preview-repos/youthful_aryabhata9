datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guess {
  createdAt DateTime @default(now())
  guess     String?
  id        String   @id @default(cuid())
  isCorrect Boolean?
  updatedAt DateTime @updatedAt
}

model GameSession {
  createdAt    DateTime               @default(now())
  currentWord  String?
  endTime      DateTime?
  id           String                 @id @default(cuid())
  status       EnumGameSessionStatus?
  updatedAt    DateTime               @updatedAt
  wrongGuesses Int?
}

model Word {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  word      String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumGameSessionStatus {
  Option1
}
